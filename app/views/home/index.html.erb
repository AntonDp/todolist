<!DOCTYPE html>
<html lang="en" ng-app="listModule">
<head>
  <meta charset="UTF-8">
   
    <title>Document</title>
  
  </head>
<body>
  <div class="container" ng-controller="listCtrl as ctrl">
  <h1 class="title1">Todo lists</h1>
    <h2 class="title2">From Ruby Garage</h2>
    <div class="box_1" ng-repeat="project in ctrl.prjs.projects">
          <div class="row list1" id="id{{$index}}">
        <div class="up col-xs-2 col-sm-1 col-md-1 col-lg-1">        
          <img src="" alt="" class="up">
        </div>
        <div class="col-xs-8 col-sm-10 col-md-10 col-lg-10">
        <p class="up1" ng-show="ctrl.tumbler[$index]">{{project.name}}</p>
        <form class="in3" ng-hide="ctrl.tumbler[$index]" ng-submit="ctrl.editName($index)">
        <input type="text" ng-value="project.name" ng-hide="ctrl.tumbler[$index]" ng-model="ctrl.listName">
        <button type="submit" ng-hide="ctrl.tumbler[$index]">
        Rewrite
        </button>
        </form>
                </div>
        <div class="box col-xs-1 col-sm-1 col-md-1 col-lg-1">
          <button ng-click="ctrl.editListName($index)">
          <span class="glyphicon glyphicon-pencil"></span>
          </button>
          <button ng-click="ctrl.delList($index)">
          <span class="glyphicon glyphicon-trash"></span>
          </button>
        </div>
      </div>
      <div class="row list2">
        <div class="cross col-xs-2 col-sm-1 col-md-1 col-lg-1">
        </div>
        <form class="in2" ng-submit="ctrl.addTask($index, $event)">
        <input name="Task" type="text" class="col-xs-7 col-sm-9 col-md-9 col-lg-9 in1" ng-model="ctrl.taskText" placeholder="Create a task">
        <button class="bt col-xs-2 col-sm-2 col-md-2 col-lg-2" type="submit">Add task</button>
        </form> 
            
      </div>
      
        <li class="list3 row" ng-repeat="roll in project.tasks">
          <div class="list3_1_3 col-xs-2 col-sm-1 col-md-1 col-lg-1">
          <input class="list3_1_1" type="checkbox" ng-model="roll.status">
          </div>
          <div class="list3_1_2 col-xs-7 col-sm-9 col-md-9 col-lg-9">

          <form class="" ng-hide="ctrl.tumbler[$parent.$index][$index]" ng-submit="ctrl.switchTask($parent.$index, $index)">
          <input ng-value="roll.name" type="text" ng-hide="ctrl.tumbler[$parent.$index][$index]" ng-model="roll.name">
          <button type="submit" ng-hide="ctrl.tumbler[$parent.$index][$index]" ng-click="ctrl.editTask($parent.$index, $index)">
          Rewrite
          </button>
          </form>
            <p class="up4" ng-show="ctrl.tumbler[$parent.$index][$index]">{{roll.name}}</p>
            </div>
          <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
          <div class="list3_3">


          <button ng-click="ctrl.tumblerTask($parent.$index, $index)">
          <span class="glyphicon glyphicon-pencil"></span>
          </button>
          <button ng-click="ctrl.delTask($parent.$index, $index)">
          <span class="glyphicon glyphicon-trash"></span>
          </button>
            
          </div>
          </div>
        </li>
      
    </div>
    <div class="row">
      <button id="top1" ng-click="ctrl.saveLists()">Add Todo list</button>
    </div>
   
    
  </div>
</body>
</html>